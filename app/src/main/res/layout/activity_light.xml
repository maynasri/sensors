<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LightLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/brightnessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveau de luminosité"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/brightnessTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Luminosité : 0%"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <com.example.sensors.HalfCircleProgressBar
        android:id="@+id/halfCircleProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp" />

</LinearLayout>
